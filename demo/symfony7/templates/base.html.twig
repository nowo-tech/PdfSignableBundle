<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}PdfSignable Bundle Demo{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .demos-aside { width: 16rem; min-height: 0; }
        .demos-aside .nav-link { padding-left: 1rem; color: #fff; }
        .demos-aside .nav-link:hover { background: rgba(255,255,255,0.08); color: #fff; }
        .demos-aside .nav-link.active { font-weight: 600; color: #fff; background: rgba(255,255,255,0.15); border-radius: 0.25rem; }
        #demosOffcanvas .nav-link { color: #fff; }
        #demosOffcanvas .nav-link:hover { color: #fff; }
        #demosOffcanvas .nav-link.active { font-weight: 600; background: rgba(255,255,255,0.15); border-radius: 0.25rem; }
        @media (max-width: 991.98px) {
            .demos-aside.demos-aside-desktop { display: none !important; }
        }
    </style>
    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">PdfSignable Demo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}">Home</a>
                    </li>
                </ul>
                <button class="btn btn-outline-light btn-sm d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#demosOffcanvas" aria-controls="demosOffcanvas" aria-label="Open demos menu">Demos</button>
            </div>
        </div>
    </nav>

    <div class="d-flex flex-grow-1 overflow-hidden">
        <aside id="demosSidebar" class="demos-aside demos-aside-desktop flex-shrink-0 bg-dark text-white overflow-y-auto py-3" aria-label="Demo pages">
            <div class="px-2">
                {% include 'demos_nav.html.twig' %}
            </div>
        </aside>

        <main class="flex-grow-1 overflow-auto py-4 px-3 px-lg-4">
            <div class="container-fluid">
                {% set _prev_next = demos_prev_next() %}
                {% if _prev_next.prev or _prev_next.next %}
                <nav class="d-flex justify-content-between align-items-center small text-muted mb-3 py-2 border-bottom" aria-label="Previous/next demo">
                    <span>
                        {% if _prev_next.prev %}
                            <a href="{{ path(_prev_next.prev.route) }}">&larr; {{ _prev_next.prev.label }}</a>
                        {% else %}
                            <span class="text-muted">&larr; —</span>
                        {% endif %}
                    </span>
                    <span>
                        {% if _prev_next.next %}
                            <a href="{{ path(_prev_next.next.route) }}">{{ _prev_next.next.label }} &rarr;</a>
                        {% else %}
                            <span class="text-muted">— &rarr;</span>
                        {% endif %}
                    </span>
                </nav>
                {% endif %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
        </main>
    </div>

    <div class="offcanvas offcanvas-start offcanvas-dark bg-dark" tabindex="-1" id="demosOffcanvas" aria-labelledby="demosOffcanvasLabel">
        <div class="offcanvas-header border-secondary">
            <h5 class="offcanvas-title" id="demosOffcanvasLabel">Demo pages</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body overflow-y-auto py-0">
            {% include 'demos_nav.html.twig' %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
