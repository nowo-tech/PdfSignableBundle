{#
  Demo navigation: driven by demos_menu() (grouped data). Highlights current route.
#}
{% set _current_route = app.request.attributes.get('_route') %}
{% set _menu = demos_menu() %}
<nav class="nav flex-column small" aria-label="Demo pages">
  {% for section in _menu %}
    {% if section.group is not empty %}
      <h6 class="px-3 pt-2 pb-1 text-uppercase">{{ section.group }}</h6>
    {% else %}
      <hr class="my-2">
    {% endif %}
    {% for item in section.items %}
      <a class="nav-link py-1 {{ _current_route == item.route ? 'active' : '' }}" href="{{ path(item.route) }}">{{ item.label }}</a>
    {% endfor %}
  {% endfor %}
</nav>
