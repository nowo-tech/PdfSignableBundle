{
  "name": "nowo-tech/pdf-signable-bundle",
  "description": "Define signature box coordinates on PDFs in Symfony: form type with PDF.js viewer, drag-and-drop placement, validation, and signing hooks.",
  "type": "symfony-bundle",
  "license": "MIT",
  "keywords": [
    "symfony",
    "symfony-bundle",
    "pdf",
    "pdf-viewer",
    "pdfjs",
    "signature",
    "signature-coordinates",
    "document-signing",
    "form",
    "form-type",
    "coordinates",
    "signing",
    "eidas"
  ],
  "homepage": "https://github.com/nowo-tech/pdfSignableBundle",
  "support": {
    "issues": "https://github.com/nowo-tech/pdfSignableBundle/issues",
    "source": "https://github.com/nowo-tech/pdfSignableBundle",
    "docs": "https://github.com/nowo-tech/pdfSignableBundle/tree/HEAD/docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nowo-tech/pdfSignableBundle.git"
  },
  "authors": [
    {
      "name": "HÃ©ctor Franco Aceituno",
      "email": "hectorfranco@nowo.tech",
      "homepage": "https://github.com/HecFranco",
      "role": "Developer"
    },
    {
      "name": "Nowo.tech",
      "homepage": "https://nowo.tech"
    }
  ],
  "require": {
    "php": ">=8.1",
    "symfony/framework-bundle": "^6.1 || ^7.0 || ^8.0",
    "symfony/form": "^6.1 || ^7.0 || ^8.0",
    "symfony/http-client": "^6.1 || ^7.0 || ^8.0",
    "symfony/process": "^6.1 || ^7.0 || ^8.0",
    "symfony/twig-bundle": "^6.1 || ^7.0 || ^8.0",
    "symfony/translation": "^6.1 || ^7.0 || ^8.0",
    "symfony/validator": "^6.1 || ^7.0 || ^8.0",
    "symfony/yaml": "^6.1 || ^7.0 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Nowo\\PdfSignableBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nowo\\PdfSignableBundle\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.1.0"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-text --coverage-html coverage --coverage-clover coverage.xml",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix",
    "qa": [
      "@cs-check",
      "@test"
    ],
    "validate-translations": "php scripts/validate-translations-yaml.php"
  },
  "suggest": {
    "ext-yaml": "For faster YAML parsing (optional; Symfony Yaml is used)"
  }
}
