{
  "name": "nowo-tech/pdf-signable-bundle",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "build": "tsc && vite build && VITE_ENTRY=acroform-editor vite build && pnpm run build:css",
    "copy-worker": "node scripts/copy-pdf-worker.cjs",
    "postinstall": "node scripts/copy-pdf-worker.cjs",
    "build:css": "sass assets/pdf-signable.scss src/Resources/public/js/pdf-signable.css --no-source-map",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "pdfjs-dist": "^4.10.38"
  },
  "devDependencies": {
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "vite": "^6.0.5",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
